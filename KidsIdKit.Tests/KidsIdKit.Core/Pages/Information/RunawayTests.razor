@inherits TestContext

@code
{
    [Fact]
    public void RendersRunawayInfoPage()
    {
        // Act
        var cut = RenderComponent<Runaway>();

        // Assert - verify key structural elements and content
        Assert.NotNull(cut.Find("h1"));
        Assert.Equal("Definition of a Runaway Youth", cut.Find("h1").TextContent);
        
        // Verify the page has the expected number of main list items
        var listItems = cut.FindAll("ol > li");
        Assert.Equal(19, listItems.Count);
        
        // Verify InfoPage back links are present (one at top, one at bottom)
        var backLinks = cut.FindAll("a[href='/Information']");
        Assert.Equal(2, backLinks.Count);
        
        // Verify key content is present
        Assert.Contains("Missing Children Minnesota", cut.Markup);
        Assert.Contains("National Center for Missing and Exploited Children", cut.Markup);
        Assert.Contains("National Runaway Safeline", cut.Markup);
        Assert.Contains("NCIC", cut.Markup);
    }
}
