@inherits TestContext

@code
{
    [Fact]
    public void RendersSafetyInfoPage()
    {
        // Act
        var cut = RenderComponent<Safety>();

        // Assert - verify key structural elements and content
        var headings = cut.FindAll("h1");
        Assert.Equal(2, headings.Count);
        Assert.Equal("Safer Kids Know", headings[0].TextContent);
        Assert.Equal("Safer Parents Know", headings[1].TextContent);
        
        // Verify the three program sections are present
        var h2Headings = cut.FindAll("h2");
        Assert.Equal(3, h2Headings.Count);
        Assert.Contains("RUN, YELL", h2Headings[0].TextContent);
        Assert.Contains("S.A.F.E.R.", h2Headings[1].TextContent);
        Assert.Contains("Choices", h2Headings[2].TextContent);
        
        // Verify InfoPage back links are present (one at top, one at bottom)
        var backLinks = cut.FindAll("a[href='/Information']");
        Assert.Equal(2, backLinks.Count);
        
        // Verify key content is present
        Assert.Contains("911", cut.Markup);
        Assert.Contains("buddy system", cut.Markup);
    }
}
