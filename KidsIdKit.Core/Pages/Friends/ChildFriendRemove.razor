@page "/FriendRemove/{id:int}/{friendid:int}"

@using KidsIdKit.Core.Data
@using KidsIdKit.Core.Services

@inject IFamilyStateService FamilyState
@inject NavigationManager NavigationManager

@if (Friend == null)
{
    <h2>Remove Friend</h2>
    <p>Loading...</p>
}
else
{
    <h4>Remove friend : @Friend.GivenName @Friend.FamilyName ?</h4>

    <div>Are you sure you want to remove this friend from the app?</div>

    <div style="margin-top:10px">
        <button class="btn btn-primary" @onclick="NoCancel">No</button>
        <button class="btn btn-danger" @onclick="YesRemove">Yes</button>
    </div>
}

@code {
    [Parameter] public int id { get; set; }
    [Parameter] public int friendid { get; set; }

    Child? CurrentChild;
    Person? Friend;

    protected override void OnInitialized()
    {
        CurrentChild = FamilyState.GetChild(id);
        if (CurrentChild != null && friendid >= 0 && friendid < CurrentChild.Friends.Count)
        {
            Friend = CurrentChild.Friends[friendid];
        }
    }

    private async Task YesRemove()
    {
        if (CurrentChild is not null && Friend is not null)
        {
            CurrentChild.Friends.Remove(Friend);
            await FamilyState.SaveAsync();
        }
        NavigationManager.NavigateTo($"/childFriends/{id}");
    }

    private void NoCancel()
    {
        NavigationManager.NavigateTo($"/childFriends/{id}");
    }
}
