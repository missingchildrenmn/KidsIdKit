@page "/CareProviderRemove/{childId:int}/{careId:int}"
@layout KidsIdKit.Core.SharedComponents.ProtectedLayout

@using KidsIdKit.Core.Data
@using KidsIdKit.Core.Services

@inject IFamilyStateService FamilyState
@inject NavigationManager NavigationManager

<h2>Remove Care Provider</h2>
@if (CareProvider == null)
{
    <p>Loading...</p>
}
else
{
    <div class="alert-warning">Remove @CareProvider.GivenName @CareProvider.FamilyName ?</div>
    <div>Are you sure you want to remove this care provider?</div>
    <div style="margin-top:10px">
        <button class="btn btn-primary" @onclick="NoCancel">No</button>
        <button class="btn btn-danger" @onclick="YesRemove">Yes</button>
    </div>
}

@code {
    [Parameter]
    public int childId { get; set; }
    [Parameter]
    public int careId { get; set; }

    Child? CurrentChild;
    CareProvider? CareProvider;

    protected override void OnInitialized()
    {
        CurrentChild = FamilyState.GetChild(childId);
        if (CurrentChild != null && careId >= 0 && careId < CurrentChild.ProfessionalCareProviders.Count)
        {
            CareProvider = CurrentChild.ProfessionalCareProviders[careId];
        }
    }

    private async Task YesRemove()
    {
        if (CurrentChild is not null && CareProvider is not null)
        {
            CurrentChild.ProfessionalCareProviders.Remove(CareProvider);
            await FamilyState.SaveAsync();
        }
        NavigationManager.NavigateTo($"/childCareProviders/{childId}");
    }

    private void NoCancel()
    {
        NavigationManager.NavigateTo($"/childCareProviders/{childId}");
    }
}
